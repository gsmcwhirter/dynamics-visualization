link-color-1 = #a75416
link-color-2 = #fb7e21
top-bg-color = #006080
bot-bg-color = #eeeeee
header-text-color = top-bg-color
body-padding = 30px

html, body
  width 100%
  height 100%

body
  font-family "Helvetica Neue", Helvetica, Arial, sans-serif
  padding body-padding
  font-size 16px
  background -moz-linear-gradient(top, top-bg-color, bot-bg-color)
  background -webkit-gradient(linear, 0 0, 0 90%, from(top-bg-color), to(bot-bg-color))
  background-color bot-bg-color
  background-repeat no-repeat
  
body
  h1, h2, h3, h4, h5, h6
    color header-text-color - 10%
    font-family Georgia, serif !important 
  
  #foot-spacer
    clear both
    height body-padding
  
  #content
    padding 20px
    padding-top 5px
    border-radius 8px
    -moz-border-radius 8px
    -webkit-border-radius 8px
    border 1px solid #ccc
    
    -moz-box-shadow 4px 4px 20px rgba(0, 0, 0, 0.5)
    -webkit-box-shadow 4px 4px 20px rgba(0, 0, 0, 0.5)
    background -moz-linear-gradient(top, white, #EEE)
    background -webkit-gradient(linear, 0 0, 0 90%, from(white), to(#EEE))
    background-color #eee
    
    .cblock
      border-radius 8px
      -moz-border-radius 8px
      -webkit-border-radius 8px
      border 1px solid #ccc
      background-color white
      padding 10px
      padding-top 0
      margin-right 10px
      margin-top 10px
    
    #main
      padding 5px 0
    
  a
    color link-color-1
    text-decoration none
  a:hover
    color link-color-2
    text-decoration underline
  span.sep, span.link-sep
    margin 0 10px
    
  .menu
    font-size 14px
  
    a
      font-weight bold
  
    span.sep
      margin 0 10px
      color #ccc
      
  .menu.header
    border-bottom 1px solid #ddd
    
  .menu.footer
    margin-top 5px
    border-top 1px solid #ddd
    
form.game
  .save-button
    display none
  .process-button
    display block
  .edit-button
    display none
  h1.label
    display block
  input.title
    display none
  h2.game-type
    display block
  select.presets
    display none
  input.entry-input
    display none
  .entry
    display inline
  
form.game.editing
  .save-button
    display block
  .process-button
    display none
  .edit-button
    display block
  br.edit-button
    display inline
  h1.label
    display none
  input.title
    display inline
  h2.game-type
    display none
  select.presets
    display inline
  input.entry-input
    display inline
  .entry
    display none
    
a.button.positive 
  color #529214
a.button.negative
  color #D12F19

.game
  overflow auto

  .game-grid
    width 650px
    float left

    .game-grid-actual
      game-border-color = #bbb
      width 300px
      border 1px solid game-border-color

      input[type=text],
      input[type=password],
      input[type=email],
      input[type=url],
      input[type=number],
      input[type=date],
      input[type=datetime],
      input[type=month],
      input[type=week],
      input[type=time],
      input[type=search],
      input[type=color],
      select,
      textarea
        width 100px

      .row
        overflow auto
        border-bottom 1px solid game-border-color;

        .cell
          float left
          width 148px
          border-right 1px solid game-border-color
          overflow auto
          text-align center
          padding 10px 0

          .entry
            width 60px
            padding 5px
            margin 0.5em 0
            font-size 1.5em

          .entry-input
            width 50px

          .entry.left, .entry-input.left
            text-align right
            float left

          .entry-input.left 
            margin-left 2px

          .entry.right, .entry-input.right
            text-align left
            float right

          .entry-input.right
            margin-right 2px

          .sep
            padding 5px 0
            margin 0.5em 0
            display block
            font-size 1.5em
        
        .cell.last
            border-right none
      

      .row.last
        border-bottom none
      
  .visualization
    margin-top 1.5em

  .game-actions
    width 172px
    float right
    
#legend
  padding 0 5px
  border 1px solid #ddd
  border-radius 10px
  -moz-border-radius 10px
  -webkit-border-radius 10px
  
  //border-top none
  //border-top-left-radius 0
  //border-top-right-radius 0
  //-moz-border-top-left-radius 0
  //-moz-border-top-right-radius 0
  //-webkit-border-top-left-radius 0
  //-webkit-border-top-right-radius 0
  margin-top 10px
  
  background-color #fff

#test-space
  height: 1000px !important

fieldset
  border 1px solid @lightborder
  clear both

  border-radius 10px
  -webkit-border-radius 10px
  -moz-border-radius 10px

  .form-line
    overflow auto
    margin-bottom .5em

  input[type=text],
  input[type=password],
  input[type=email],
  input[type=url],
  input[type=number],
  input[type=date],
  input[type=datetime],
  input[type=month],
  input[type=week],
  input[type=time],
  input[type=search],
  input[type=color],
  select,
  textarea
    width 75%
    margin 0.5em 0px
    padding 5px

  textarea
    height 20em

  .field-status
    display inline-block
    width 30px
    height 26px
    vertical-align top
    margin-top 6px
    margin-left 1em
    border 1px solid #ccc
    border-radius 10px
    -moz-border-radius 10px
    -webkit-border-radius 10px

  .status-field-ok,
  .status-field-not-ok,
  .status-field-maybe
    display inline-block
    width 30px
    height 26px
    background-position center
    background-repeat no-repeat

  .status-field-ok
    background-image: url('../images/signup_ok.png')

  .status-field-not-ok
    background-image url('../images/signup_notok.png')

  .status-field-maybe
    background-image url('../images/signup_maybe.png')

  input.title + .field-status
    margin-top 13px

  ul.field-error
    color #f00
    margin 0
    margin-bottom 2px
    li
      color #f00

fieldset.narrow-fields
  input[type=text],
  input[type=password],
  input[type=email],
  input[type=url],
  input[type=number],
  input[type=date],
  input[type=datetime],
  input[type=month],
  input[type=week],
  input[type=time],
  input[type=search],
  input[type=color],
  select,
  textarea
    width 50%

fieldset.wide-fields
  input[type=text],
  input[type=password],
  input[type=email],
  input[type=url],
  input[type=number],
  input[type=date],
  input[type=datetime],
  input[type=month],
  input[type=week],
  input[type=time],
  input[type=search],
  input[type=color],
  select,
  textarea
    width: 90%
    
p, ul, ol
  margin-bottom 1.5em

ul,
ul>li,
ol,
ol>li
  list-style-position outside

ul.bullets,
ul.bullets>li
  list-style-type circle

ul.bullets ul.bullets,
ul.bullets ul.bullets>li
  list-style-type square

ul.bullets ul.bullets ul.bullets,
ul.bullets ul.bullets ul.bullets>li
  list-style-type disc

ol,
ol>li,
ol.decimal,
ol.decimal>li
  list-style-type decimal

ol ol,
ol ol>li,
ol.Alpha,
ol.Alpha>li
  list-style-type upper-alpha

ol ol ol,
ol ol ol>li,
ol.roman,
ol.roman>li
  list-style-type lower-roman

ol ol ol ol,
ol ol ol ol>li,
ol.alpha,
ol.alpha>li
  list-style-type lower-alpha

strong,
.bold
	font-weight bold

.center
  text-align center
