html, body
  width 100%
  height 100%

body
  font 20px/1.5 "Helvetica Neue", Helvetica, Arial, sans-serif
  padding 60px 50px
  text-align center

ul, li
  margin 0
  padding 0

ul
  list-style none

h1, h2
  margin 0

h1
  margin-top 15px
  font-size 2em
  font-weight 200

h1 a
  text-decoration none
  color inherit

h1 a:hover
  text-decoration underline
  
#everything
  width 80%
  margin 0 auto
  text-align left
  
  nav
    font-size .75em
    
    a
      margin 0 .5em
    
  span.by
    font-size .5em
    padding-left .5em
  
#mocha
  text-align left
